{
  "name": "james-dong-profile-website-2025",
  "version": "1.0.0",
  "description": "A personal profile website using Tailwind CSS, the goal is to clone Ubuntu desktop experience",
  "main": "index.html",
  "scripts": {
    "build": "tailwindcss build styles/style.css -o styles/tailwind-output.css",
    "watch": "tailwindcss build styles/style.css -o styles/tailwind-output.css --watch",
    "format": "prettier --write .",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "fix": "npm run format && npm run lint:fix"
  },
  "dependencies": {
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5",
    "prettier": "^3.2.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.5"
  },
  "keywords": [
    "James Dong",
    "profile website",
    "tailwind css",
    "javascript",
    "html",
    "css"
  ],
  "author": "James Dong",
  "license": "ISC"
}
